package com.tecmave.controller;

import java.util.*;
import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/empleados")
public class EmpleadoController {

    private Map<Long, Map<String, Object>> empleados = new HashMap<>();

    @GetMapping
    public Collection<Map<String, Object>> listarTodosLosEmpleados() {
        return empleados.values();
    }

    @PostMapping
    public Map<String, Object> crearEmpleado(@RequestBody Map<String, Object> empleado) {
        Long id = empleados.size() + 1L;
        empleado.put("id", id);
        empleados.put(id, empleado);
        return empleado;
    }

    @GetMapping("/{id}")
    public Map<String, Object> obtenerEmpleadoPorId(@PathVariable Long id) {
        return empleados.get(id);
    }

    @DeleteMapping("/{id}")
    public void eliminarEmpleado(@PathVariable Long id) {
        empleados.remove(id);
    }
}
